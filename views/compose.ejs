<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="messageTitle">Title</label>
    <input class="form-control form-control-lg" type="text" name="messageTitle" value="">
    <label for="messageContent">Post</label>
    <textarea class="form-control form-control-lg" name="messageContent" rows="8" cols="80"></textarea>
  </div>
  <button class = "btn btn-primary" type="submit" name="button">Publish</button>
</form>

